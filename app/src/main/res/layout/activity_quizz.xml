<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e82d4"
    android:id="@+id/relativeLayout"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id="@+id/Timer"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q.1"
        android:id="@+id/QuestionNumber"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/question"
        android:text="- "/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:weightSum="4"
        android:layout_below="@+id/question"
        android:padding="20dp"
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#6cffffff"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:id="@+id/op1Btn"
            android:layout_margin="3dp"
            android:text=""/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#6cffffff"
            android:textColor="#fff"
            android:gravity="left|center_vertical"
            android:id="@+id/op2Btn"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/op1Btn"
            android:layout_margin="3dp"
            android:text=""/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#6cffffff"
            android:textColor="#fff"
            android:id="@+id/op3Btn"
            android:gravity="left|center_vertical"
            android:layout_below="@+id/op2Btn"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:layout_margin="3dp"
            android:text=""/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/op3Btn"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:background="#6cffffff"
            android:textColor="#fff"
            android:id="@+id/op4Btn"
            android:textSize="15dp"
            android:layout_margin="3dp"
            android:text=""/>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/layout"
        android:onClick="NextQuestion"
        android:background="#6c282828"
        android:textColor="#fff"

        android:id="@+id/next"
        android:textSize="17dp"
        android:layout_margin="20dp"
        android:text="Next"/>

  <!--  <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-7919542238309223/6016292138">
        </com.google.android.gms.ads.AdView>-->
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        />
</RelativeLayout>
